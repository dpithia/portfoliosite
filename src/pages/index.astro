---
import Layout from '../layouts/Layout.astro';
---

  <Layout title="Dylan - Modern Portfolio">
    <main>
    <!-- Hero Section -->
    <section class="min-h-[60vh] flex items-center justify-center relative">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="text-center">
          <!-- Main heading -->
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-poppins font-bold text-gray-900 dark:text-white mb-4 leading-tight">
            Hi, I'm <span class="bg-gradient-to-r from-primary-600 via-purple-600 to-pink-600 bg-clip-text text-transparent">Dylan</span>
          </h1>

          <!-- Subtitle -->
          <div class="text-lg sm:text-xl text-gray-600 dark:text-gray-300 leading-relaxed max-w-2xl mx-auto mb-6 font-poppins font-light">
            <span id="typing-text"></span>
            <span class="ml-1 inline-block w-1 h-6 bg-primary-600 dark:bg-primary-400 animate-pulse"></span>
          </div>

          <!-- Social links -->
          <div class="flex flex-wrap items-center justify-center gap-3 mb-6">
            <a href="#contact" class="group flex items-center px-4 py-2 bg-gray-100 dark:bg-gray-800 rounded-full text-gray-700 dark:text-gray-300 hover:bg-primary-600 dark:hover:bg-primary-600 hover:text-white transition-all duration-200">
